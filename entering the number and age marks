#include<stdio.h>
    struct student{
        char name[20];
        int age;
        float marks;
    };
    int main(){
        struct student s1;
        printf("Enter the name \n");
        scanf("%s",&s1.name);
        printf("Enter the age \n");
        scanf("%d",&s1.age);
        printf("Enter the marks \n");
        scanf("%f",&s1.marks);
        printf("\nStudent details \n");
        printf("Name:%s\n",s1.name); 
        printf("Age:%d\n",s1.age);
        printf("Marks:%.2f\n",s1.marks);
    }
